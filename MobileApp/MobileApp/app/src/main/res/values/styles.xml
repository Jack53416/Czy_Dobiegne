<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="VA.OverflowTest" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="srcCompat">@drawable/android_ic_overflow</item>
        <item name="android:src">@drawable/android_ic_overflow</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:actionOverflowButtonStyle">@style/VA.OverflowTest</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="VBStyle" >
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25dp</item>
    </style>


    <style name="EditTextLogin">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">#4bcfff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


</resources>
